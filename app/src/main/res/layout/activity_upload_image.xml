<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CECFCE"
    android:padding="16dp"
    tools:context=".UploadImage">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_choose_image"
        android:layout_width="174dp"
        android:layout_height="65dp"
        android:layout_marginStart="-4dp"
        android:background="@drawable/btn3"
        android:backgroundTint="#8FBA4B"
        android:text="Add Plants"
        android:textColor="@color/white"

        />

    <EditText
        android:id="@+id/edit_text_file_name"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_choose_image"
        android:layout_alignBottom="@+id/button_choose_image"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@id/button_choose_image"
        android:hint="NAME"
        android:textColor="#637F44"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColorHint="#637F44" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="353dp"
        android:layout_height="497dp"
        android:layout_above="@+id/progress_bar"
        android:layout_below="@+id/edit_text_file_name"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="613dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_marginBottom="-590dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_upload"
        android:layout_width="170dp"
        android:layout_height="61dp"

        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/btn3"
        android:backgroundTint="#8FBA4B"
        android:text="Upload" />

    <TextView
        android:id="@+id/text_view_show_uploads"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/button_upload"
        android:layout_alignEnd="@+id/button_upload"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:textColor="#637F44"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-178dp"

        android:layout_marginBottom="27dp"
        android:layout_toEndOf="@id/button_upload"
        android:text="Show Plants"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColorHint="@color/white"
        android:textSize="20sp" />


</RelativeLayout>