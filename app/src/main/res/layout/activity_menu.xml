<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2D2D2"
    tools:context=".MenuActivity">

    <!-- Пошукова строка -->
    <SearchView
        android:id="@+id/searchForMeny"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/firstRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Введіть текст для пошуку" />

    <!-- Перший ряд -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstRow"
        android:layout_width="411dp"
        android:layout_height="196dp"
        android:layout_marginTop="16dp"
        android:paddingTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchForMeny">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bUsersRoom"
            android:layout_width="207dp"
            android:layout_height="181dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/logoobtack"
            android:gravity="bottom|center_horizontal"
            android:text="roomusers"
            android:textColor="#0E0501"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageAi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.444" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/imageAi"
            android:layout_width="207dp"
            android:layout_height="181dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/logoobtack"
            android:gravity="bottom|center_horizontal"
            android:text="AiImage"
            android:textColor="#0E0501"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/bUsersRoom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bUsersRoom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Другий ряд -->

    <!-- Третій ряд -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secondRow"
        android:layout_width="411dp"
        android:layout_height="196dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstRow">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStorage"
            android:layout_width="207dp"
            android:layout_height="181dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/logoobtack"
            android:gravity="bottom|center_horizontal"
            android:text="UploadImage"
            android:textColor="#0E0501"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bCreateOrder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bCreateOrder"
            android:layout_width="207dp"
            android:layout_height="181dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/logoobtack"
            android:gravity="bottom|center_horizontal"
            android:text="Order"
            android:textColor="#0E0501"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnStorage"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/theertRow"
        android:layout_width="411dp"
        android:layout_height="196dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondRow">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searchView"
            android:layout_width="207dp"
            android:layout_height="181dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/logoobtack"
            android:gravity="bottom|center_horizontal"
            android:text="searchView"
            android:textColor="#0E0501"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnSomfingElse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSomfingElse"
            android:layout_width="207dp"
            android:layout_height="181dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/logoobtack"
            android:gravity="bottom|left"
            android:text="Somfing else"
            android:textColor="#0E0501"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/searchView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Кнопка виходу -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        android:layout_width="250dp"
        android:layout_height="72dp"

        android:background="@drawable/btn3"
        android:text="exit"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/theertRow" />

</androidx.constraintlayout.widget.ConstraintLayout>
